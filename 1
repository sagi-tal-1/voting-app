apiVersion: apps/v1
kind: Deployment
metadata:
  name: test-karpenter
spec:
  replicas: 1
  selector:
    matchLabels:
      app: test-karpenter
  template:
    metadata:
      labels:
        app: test-karpenter
    spec:
      nodeSelector:
        karpenter.sh/capacity-type: spot
      containers:
      - name: pause
        image: public.ecr.aws/eks-distro/kubernetes/pause:latest
        resources:
          requests:
            cpu: 100m
            memory: 100Mi
